{
  "manifest_version": 3,
  "name": "小説読み上げ（COEIROINK連携）",
  "version": "1.0.0",
  "description": "COEIROINKを使って小説サイトのテキストを音声読み上げします",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://syosetu.org/*"
      ],
      "js": ["content/index.js"],
      "run_at": "document_idle"
    }
  ],

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "http://localhost:50032/*"
  ],

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://syosetu.org/*"]
    }
  ]
}
